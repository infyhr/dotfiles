out_to_x no
own_window no
out_to_console yes
background no
max_text_width 0

# Update interval in seconds
update_interval 60

# This is the number of times Conky will update before quitting.
# Set to zero to run forever.
total_run_times 0

# Shortens units to a single character (kiB->k, GiB->G, etc.). Default is off.
short_units yes

# How strict should if_up be when testing an interface for being up?
# The value is one of up, link or address, to check for the interface
# being solely up, being up and having link or being up, having link
# and an assigned IP address.
if_up_strictness address

# Add spaces to keep things from moving about?  This only affects certain objects.
# use_spacer should have an argument of left, right, or none
#use_spacer ri

# Force UTF8? note that UTF8 support required XFT
override_utf8_locale yes

# number of cpu samples to average
# set to 1 to disable averaging
cpu_avg_samples 2

double_buffer yes

# Stuff after 'TEXT' will be formatted on screen
TEXT

# JSON for.config/i3bar
[
    {
        "full_text": "${execi 60 /home/infy/.config/i3/nowplaying.sh}",
        "short_text": "♩ ♪ ♫",
        "color":"\#707070",
        "separator_block_width": 15,
        "icon": "/home/infy/.config/i3/icons/note.xbm",
        "separator": false
    },
    {"full_text": "${exec sudo ethtool enp2s0 | grep -i 'Speed:' | awk '/[0-9]*/{print $2}'}", "color":"\#909090", "separator_block_width": 15, "icon": "/home/infy/.config/i3/icons/net_wired.xbm", "separator": false},
    {"full_text": "fesb:${execi 1800 /home/infy/.config/i3/check_email_skole.py} gmail:${execi 1810 /home/infy/.config/i3/check_email_gmail.py}", "color":"\#909090", "separator_block_width": 15, "icon": "/home/infy/.config/i3/icons/mail.xbm", "separator": false},
    {"full_text": "${execi 1800 /home/infy/.config/i3/conky_weather.sh}°C", "color":"\#f88017", "separator_block_width": 15, "icon": "/home/infy/.config/i3/icons/temp.xbm", "separator": false},
    {"full_text": "${execi 120 sensors | head -n 7 | grep "temp1" | tail -n 1 | cut -c16-19}°C", "color":"\#909090", "separator_block_width": 15, "icon": "/home/infy/.config/i3/icons/cpu.xbm", "separator": false},
